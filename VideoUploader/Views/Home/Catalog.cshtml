@{
    ViewBag.Title = "Video Catalog";
}

<h2>Video Catalog</h2>

<!-- Display message if catalog is empty -->
<p data-bind="visible: videos().length === 0">The catalog is empty now. <a href="/Home/Upload">Upload</a> some videos now.</p>

<!-- Video table displayed when there are videos -->
<table class="table" data-bind="visible: videos().length > 0">
    <thead>
        <tr>
            <th>File Name</th>
            <th>File Size (Bytes)</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody data-bind="foreach: videos">
        <tr>
            <td data-bind="text: fileName"></td>
            <td data-bind="text: fileSize"></td>
            <td>
                <button class="btn btn-primary" data-bind="click: $parent.playVideo">Play</button>
            </td>
        </tr>
    </tbody>
</table>

<video id="videoPlayer" controls hidden></video>

<script src="~/lib/knockout/knockout-3.5.1.js"></script>
<script src="/js/site.js"></script>
